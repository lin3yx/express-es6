{
  "name": "express-es6-starter",
  "version": "1.0.0",
  "description": "Express.js server starter with ES6",
  "main": "src/server.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "babel src/ --out-dir dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepare": "husky install"
  },
  "author": "Lambert Lin",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "http-status": "^1.5.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.12.5",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/node": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "babel-jest": "^27.4.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^27.4.6",
    "lint-staged": "^12.1.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write src",
      "yarn lint:fix"
    ]
  }
}
